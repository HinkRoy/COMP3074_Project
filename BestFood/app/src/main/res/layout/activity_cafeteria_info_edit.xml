<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/cafeteriaImage"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/logo"
        android:scaleType="centerCrop"/>

    <EditText
        android:id="@+id/editTextCafeteriaName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please enter the name of the restaurant"
        android:inputType="text"/>

    <EditText
        android:id="@+id/editTextCafeteriaRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please enter a restaurant rating"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/editTextCafeteriaDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please enter a description of the restaurant"
        android:inputType="textMultiLine"/>

    <EditText
        android:id="@+id/editTextCafeteriaPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please enter the restaurant contact number"
        android:inputType="phone"/>

    <EditText
        android:id="@+id/editTextCafeteriaTags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please enter restaurant related tags"
        android:inputType="textMultiLine"/>

    <EditText
        android:id="@+id/editTextCafeteriaLocationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please enter restaurant address information"
        android:inputType="textMultiLine"/>

    <EditText
        android:id="@+id/editTextCafeteriaLongitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please enter the longitude of the restaurant location"
        android:inputType="numberDecimal|numberSigned"/>

    <EditText
        android:id="@+id/editTextCafeteriaLatitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please enter the latitude of the restaurant location"
        android:inputType="numberDecimal|numberSigned"/>

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        style="@style/SaveButtonStyle"
        android:layout_margin="16dp"/>

</LinearLayout>
